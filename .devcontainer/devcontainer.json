// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "ramalama-python",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	//Needed for Podman in Podman 
	"runArgs": [
		"--userns=keep-id",
		"--pid=host",
		"--security-opt=label=disable",
		"--systemd=false",
		"--device=/dev/dri",
		"--device=nvidia.com/gpu=all"
	],
	"remoteUser": "podman",
	"containerUser": "podman",
	//bind host ramalama folder to container 
	"mounts": ["source=${localEnv:HOME}${localEnv:USERPROFILE}/.local/share/ramalama/,target=/home/podman/.local/share/ramalama/,type=bind,consistency=cached"],
	//download recomended extentions
	"customizations": {
		"vscode": {
		  "extensions": [
			"ms-python.debugpy",
			"ms-python.python",
			"ms-python.black-formatter",
			"ms-python.flake8"
			],
		  "settings": {
			"[python]": {
			  "editor.formatOnSave": true,
			  "editor.codeActionsOnSave": {
				"source.fixAll": "explicit",
				"source.organizeImports": "explicit"
			  },
			  "editor.defaultFormatter": "ms-python.black-formatter"
			}
		  }
		}
	  }	  
}